    <section class="header-wrap">
        <div class="container">
            <div class="row">
                <div class="col-md-9">
                    <div class="pull-left">
                        <h3 class="subhead">Programme Approval Document for NZQA</h3>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="pull-right">

                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="content-section">
        <div class="container">
            <div class="form-container">
                <div class="form-container__block">
                    <div class="clearfix">
                        <div class="headbar">
                            <label class="st-label">Section 4</label>
                            <h5 class="subhead">Needs Analysis</h5>
                            <span>
                                Good evidence the programme is acceptable to the relevant communities and key
                                stakeholders.
                            </span>
                        </div>
                    </div>
                    <div class="clearfix">
                        <label class="section-subhd">Target Market/Needss</label>
                    </div>
                    <div class="row">
                        <div class="col-md-12 col-sm-12">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr class="thead--row">
                                            <th>Target learner group(s)</th>
                                            <th>Their needs are…</th>
                                            <th>The programme will meet their needs by…</th>
                                        </tr>
                                    </thead>
                                    <tbody class="tbody">
                                        <tr class="trow">
                                            <td><input class="form-control" placeholder="Enter a number of weeks"></td>
                                            <td> <input class="form-control" placeholder="Enter a number of weeks"></td>
                                            <td> <input class="form-control" placeholder="Enter a number of weeks"></td>
                                        </tr>
                                        <tr class="trow">
                                            <td><input class="form-control" placeholder="Enter a number of weeks"></td>
                                            <td> <input class="form-control" placeholder="Enter a number of weeks"></td>
                                            <td> <input class="form-control" placeholder="Enter a number of weeks"></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                    </div>

                    <div class="row">
                        <div class="col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Conceptual framework: </label>
                                <a href="#" class="file-link">See Course Structure and Progression</a>
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Professional recognition:</label>
                                <input class="form-control" placeholder="Enter any">
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Work-based components Y/N</label>
                                <ul class="horizontal-block-list">
                                    <li class="horizontal-block-list__item">
                                        <div class="ons-css">
                                            <label class="radio-button radio-button--material">
                                                <input type="radio" class="radio-button__input radio-button--material__input"
                                                       name="r" checked>
                                                <div class="radio-button__checkmark radio-button--material__checkmark"></div>
                                                <span>Yes</span>
                                            </label>
                                        </div>
                                    </li>
                                    <li class="horizontal-block-list__item">
                                        <div class="ons-css">
                                            <label class="radio-button radio-button--material">
                                                <input type="radio" class="radio-button__input radio-button--material__input"
                                                       name="r">
                                                <div class="radio-button__checkmark radio-button--material__checkmark"></div>
                                                <span>No</span>
                                            </label>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>


                </div>
                <div class="form-container__block">
                    <div class="clearfix">
                        <label class="section-subhd">Work-based components</label>
                    </div>

                    <div class="row">
                        <div class="col-md-12 col-sm-12">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr class="thead--row">
                                            <th>Course</th>
                                            <th>Course Type of work-based Delivery</th>
                                        </tr>
                                    </thead>
                                    <tbody class="tbody">
                                        <tr class="trow">
                                            <td><input class="form-control" placeholder="Enter a number of weeks"></td>
                                            <td> <input class="form-control" placeholder="Enter a number of weeks"></td>
                                        </tr>
                                        <tr class="trow">
                                            <td><input class="form-control" placeholder="Enter a number of weeks"></td>
                                            <td> <input class="form-control" placeholder="Enter a number of weeks"></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Work-base delivery Management: </label>
                                <input class="form-control" placeholder="Enter any">
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Work-based delivery description: </label>
                                <input class="form-control" placeholder="Enter any">
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Work-based delivery organisations</label>
                                <input class="form-control" placeholder="Enter any">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-container__block">
                    <div class="clearfix">
                        <label class="section-subhd">Stakeholder Consultation</label>
                    </div>
                    <div class="row">
                        <div class="col-md-12 col-sm-12">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr class="thead--row">
                                            <th>Date of consultation</th>
                                            <th>Consultation with whom and method</th>
                                            <th>Stakeholder type (e.g.: student/ industry/ community, etc.)</th>
                                            <th>
                                                Full details of the consulting individual, department, organisation or
                                                body including how representative they are.
                                            </th>
                                            <th>Feedback and points raised</th>
                                            <th>Response to feedback</th>
                                        </tr>
                                    </thead>
                                    <tbody class="tbody">
                                        <tr class="trow">
                                            <td><input class="form-control" placeholder="Enter a number of weeks"></td>
                                            <td> <input class="form-control" placeholder="Enter a number of weeks"></td>
                                            <td><input class="form-control" placeholder="Enter a number of weeks"></td>
                                            <td> <input class="form-control" placeholder="Enter a number of weeks"></td>
                                            <td> <input class="form-control" placeholder="Enter a number of weeks"></td>
                                            <td> <input class="form-control" placeholder="Enter a number of weeks"></td>
                                        </tr>
                                        <tr class="trow">
                                            <td><input class="form-control" placeholder="Enter a number of weeks"></td>
                                            <td> <input class="form-control" placeholder="Enter a number of weeks"></td>
                                            <td><input class="form-control" placeholder="Enter a number of weeks"></td>
                                            <td> <input class="form-control" placeholder="Enter a number of weeks"></td>
                                            <td> <input class="form-control" placeholder="Enter a number of weeks"></td>
                                            <td> <input class="form-control" placeholder="Enter a number of weeks"></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>
